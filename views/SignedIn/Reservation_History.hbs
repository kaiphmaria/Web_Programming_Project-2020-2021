  <div class="row justify-content-center" >
    <div class="col">
        <div class="container">
          <h2>Οι κρατήσεις μου</h2><br>
          <p style="font-size: 15px;">Αν δεν εμφανίζεται απευθείας η κράτησή σας πατήστε εδώ: <a type="button" href="/SignedIn/{{post.username}}/ReservationHistory" id="refresh" >Επαναφόρτωση</a>
          {{#if post.Reservation_History}}
          <div class="table_container">
            <table class="table">
              <thead class="thead-dark">
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Ημ/νία Παραλαβής</th>
                  <th scope="col">Ημ/νία Επιστροφής</th>
                  <th scope="col">Τοποθεσία Παραλαβής</th>
                  <th scope="col">Τοποθεσία Επιστροφής</th>
                  <th scope="col">Μοντέλο</th>
                  <th scope="col">Σύνολο</th>
                </tr>
              </thead>
              <tbody>
              {{#each post.Reservation_History}}
                  <tr class="krathseis" data-toggle="modal">
                    <th class="scope"></th>
                    <th>{{this.im_paralavhs}}</th>
                    <th>{{this.im_epistrofhs}}</th>
                    <th>{{this.topothesia_par}}</th>
                    <th>{{this.topothesia_ep}}</th>
                    <th>{{this.modelo}}</th>
                    <th>{{this.sum}}</th>
                  </tr>
              {{/each}}
              </tbody>
            </table>
          </div>
          {{else}}
          <h4 style="margin-top:50px">Δεν έχετε κάνει καμία κράτηση</h4>
            {{/if}}
            
        </div>
      </div>
  </div>
  {{#each post.Reservation_History}}
    <div class="modal fade "  data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
          <div class="modal-header">
              <h4 class="modal-title" >Λεπτομέρειες Κράτησης</h4>
          </div>
          <div class="modal-body">
            <div class="modal-body-items">
              <div class="row" id="Dates" style="display:flex;flex-direction: row;padding:10px">
                <h4>Στοιχεία Κράτησης</h4>
                <div style="display: ;" id="ar_krathshs">{{this.ar_krathshs}}</div>
                <div class="col col-6" style="display: flex;flex-direction: column;">
                  <div class="data_container">
                    <label>Ημ/νία παραλαβής:</label><p class="date1">{{this.im_paralavhs}}</p>
                  </div>
                  <div class="data_container">
                    <label>Ημ/νία επιστροφής:</label><p class="date2">{{this.im_epistrofhs}}</p><br>
                  </div>
                  <div class="data_container">
                    <label>Τοποθεσία παραλαβής:</label><p class="topothesia1">{{this.topothesia_par}}</p><br>
                  </div>
                  <div class="data_container">
                    <label>Τοποθεσία επιστροφής:</label><p class="topothesia2">{{this.topothesia_ep}}</p><br>
                  </div>
                  <div class="data_container">
                    <label>Όχημα:</label>
                    <p class="carclass">{{this.typos_oxhmatos}}</p><p class="montelo" style="font-weight: 600;">{{this.modelo}}</p><br>
                  </div>
                  <div class="data_container">
                    <label>Τιμή:</label><p class="car_price">{{this.timh_oxhmatos}} €/μέρα</p>
                  </div>
                </div>
                <div class="col col-6">
                  <div class="img_container">
                    <img src="{{this.photo}}">
                  </div>
                </div>
              </div>
              <div class="row" id="Packets" >
                <h4>Πακέτο Κάλυψης</h4>
                <div class="col col-6">
                  <div class="packet_data">
                    <div class="data_container">
                      <label>Τίτλος Πακέτου:</label>
                      {{#if this.paketa}}
                      <p class="packet_title">{{this.paketa.titlos}}</p>
                      {{else}}
                      <p class="packet_title">Βασική Κάλυψη</p>
                      {{/if}}
                    </div>
                    <div class="data_container">
                      {{#if this.paketa}}
                      <label>Τιμή Πακέτου:</label><p class="packet_price">{{this.paketa.kostos}} €</p>
                      {{else}}
                      <label>Τιμή Πακέτου:</label><p class="packet_price">0.00 €</p>
                      {{/if}}
                    </div>                
                  </div>
                </div>
              </div>
              <div class="row" id="Yphresies">
              {{#if this.yphresies}}
                <h4>Υπηρεσίες και Προΐόντα</h4>
                <div class="col " >
                  {{#each this.yphresies}}
                      <div class="yphresia_data">
                        <div class="data_container">
                          <label>Τίτλος:</label>
                          <p class="packet_title">{{this.titlos}}</p>
                        </div>
                        <div class="data_container">
                          <label>Τιμή:</label>
                          <p class="packet_price">{{this.kostos}} €</p>
                        </div>
                      </div>
                  {{/each}}
                </div>
              {{/if}}
              </div>
              <div class="row" id="Payment">
                <h4>Πληρωμή</h4>
                <div class="col " >
                <div class="yphresia_data">
                  <div class="data_container">
                    <label>Τρόπος:</label>
                    <p class="packet_title">{{this.payment.tropos}}</p>
                  </div>
                  <div class="data_container">
                    <label>Ποσό:</label>
                    <p class="packet_price">{{this.payment.poso}}</p>
                  </div>
                  {{#if this.payment.ar_kartas}}
                  <div class="data_container">
                    <label>Αριθμός Κάρτας:</label>
                    <p class="packet_price">{{this.payment.ar_kartas}}</p>
                  </div>
                  <div class="data_container">
                    <label>Όνομα Κατόχου:</label>
                    <p class="packet_price">{{this.payment.on_katoxou}}</p>
                  </div>
                  <div class="data_container">
                    <label>Ημερομηνία Λήξης:</label>
                    <p class="packet_price">{{this.payment.im_lhkshs}}</p>
                  </div>
                  <div class="data_container">
                    <label>CVV:</label>
                    <p class="packet_price">{{this.payment.cvv}}</p>
                  </div>
                  {{/if}}
                </div>
                </div>
              </div>
              <div><hr></div>
              <div class="Sum_container">
                <label>Σύνολο: </label><p class="sum">{{this.sum}}</p>
              </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="close" data-dismiss="modal">Close</button>
                {{!-- <button type="button" class="btn btn-primary" id="car_check" data-dismiss="" onclick="CheckReservation()">Επιλογή Αυτοκινήτου</button> --}}
            </div>
          </div>
      </div>
    </div>
    </div>
  {{/each}}


 <div class="modal" id="ConfirmationModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <form id="CancelReservationForm">
        <div class="modal-header">
          <h4 class="modal-title">Ακύρωση κράτησης</h4>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <p>Είστε σίγουροι ότι θέλετε να ακυρώσετε αυτήν την κράτηση;</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">ΟΧΙ</button>
          <button type="submit" class="btn btn-primary" >ΝΑΙ</button>
        </div>
      </form>
    </div>
  </div>
</div>
</body>
</html>